@model OrderManagement.Models.Order

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="AddReview" asp-action="Add" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Number" class="control-label"></label>
                    <input type="text" asp-for="Number" class="form-control" required />
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input type="text" asp-for="Date" class="form-control" required />
                </div>               
                <div class="form-group">
                    <input type="submit" value="Добавить" />
                </div>
            </form>
        </div>
    </div>

</body>
</html>